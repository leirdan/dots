{
  // Waybar at top layer
  "layer": "top",
  "reload_on_style_change": true,
  // Waybar position (top|bottom|left|right)
  "position": "top",
  "passthrough": false,
  // Gaps between modules (4px)
  "spacing": 10,
  // Gap from the top of the screen
  "margin-top": 0,
  "margin-left": 1,
  "margin-right": 1,
  "margin-bottom": 1,
  // Choose the order of the modules
  "modules-left": ["custom/icon", "hyprland/window"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": ["tray", "clock", "battery", "network"],

  "custom/icon": {
    "format": "󰿈"
  },
  "battery": { 
     "format": "{capacity}% {icon}",
     "format-icons": ["", "", "", "", ""] 
  },
  "network": {
    "interface": "wlan0",
    "format": "{ifname}",
    "format-wifi": "{essid} ({signalStrength}%) ",
    "format-ethernet": "{ipaddr}/{cidr} 󰊗",
    "format-disconnected": "", //An empty format will hide the module.
    "tooltip-format": "{ifname} via {gwaddr} 󰊗",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
    "tooltip-format-ethernet": "{ifname} ",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50
  },
  "hyprland/window": {
    "separate-outputs": true,
    "format": "{class}",
    "rewrite": {
      // if any window is focused display Finder
      "": "Lothlórien",
      "kitty": "Shell",
      "firefox": "Browser"
    }
  },
  "hyprland/workspaces": {
    "disable-scroll": true,
    "on-click": "activate",
    "format": "{icon}",
    "format-icons": {
      "1": "i",
      "2": "ii",
      "3": "iii",
      "4": "iv",
      "5": "v",
      "6": "vi",
      "7": "vii",
      "8": "viii",
      "9": "ix",
      "10": "x"
    }
  },
  "tray": {
    "icon-size": 16,
    "spacing": 5,
    "show-passive-items": true
  },
  "clock": {
    "format": "<span></span>  {:%H:%M}",
    "interval": 1,
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "format": {
        "today": "<span color='#eed49f'><b>{}</b></span>"
      }
    },
    "actions": {
      "on-click-right": "shift_down",
      "on-click": "shift_up"
    }
  }
}
